{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/dist/*"]
    }
  },
  "references": [
    { "path": "../shared" }
  ],
  "exclude": ["node_modules"]
}
