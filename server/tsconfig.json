{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/dist/*"]
    },
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "exclude": ["node_modules", "dist"]
}
